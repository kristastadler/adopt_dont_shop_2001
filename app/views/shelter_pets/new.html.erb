<header>
  <a href="/shelters/">Shelter Index</a>
  <a href="/pets/">Pet Index</a>
</header>

<form action="/shelters/<%= @shelter.id %>/pets" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <h3>Add a new pet:</h3>
  <label>Pet Image:</label>
  <input type='text' name='pet[image]'/><br/>
  <label>Pet Name:</label>
  <input type='text' name='pet[name]'/><br/>
  <label>Pet Description:</label>
  <input type='text' name='pet[description]' /><br/>
  <label>Approximate Age:</label>
  <input type='text' name='pet[approximate_age]'/><br/>
  <label>Pet Sex:</label>
  <input type='text' name='pet[sex]' /><br/>
  <input type='submit' value="Create Pet"/>
</form>
