<header>
  <a href="/shelters/">Shelter Index</a>
  <a href="/pets/">Pet Index</a>
</header>

<form action="/pets/<%= @pet.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <h3>Update Pet Details</h3>
  <label>Pet Image:</label>
  <input type='text' name='pet[image]' value="<%= @pet.image %>" size="75"/><br/>
  <label>Pet Name:</label>
  <input type='text' name='pet[name]' value="<%= @pet.name %>"/><br/>
  <label>Pet Description:</label>
  <input type='text' name='pet[description]' value="<%= @pet.description %>" size="75"/><br/>
  <label>Approximate Age:</label>
  <input type='text' name='pet[approximate_age]' value="<%= @pet.approximate_age %>"/><br/>
  <label>Pet Sex:</label>
  <input type='text' name='pet[sex]' value="<%= @pet.sex %>"/><br/>
  <input type='submit' value="Submit"/>
</form>
