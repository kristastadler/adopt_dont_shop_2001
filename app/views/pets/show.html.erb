<h1><a href="/pets/<%= @pet.id %>"><%= @pet.name %></a></h1>

<div class="details">
<img src="<%=@pet.image%>"></img></br>
<p><%= link_to @pet.name, "/pets/#{@pet.id}" %> --
<a href="/pets/<%= @pet.id %>/edit">Update Pet</a>
<%= link_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %></p>
<%= "Description: #{@pet.description}" %></br>
<%= "Approximate Age: #{@pet.approximate_age}" %></br>
<%= "Sex: #{@pet.sex}" %></br>
<%= "Adoption Status: #{@pet.adoption_status}" %></br>
</div>
